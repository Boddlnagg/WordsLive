<Window x:Class="WordsLive.UnhandledExceptionWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Unbehandelte Ausnahme" MinHeight="250" MinWidth="500" Height="250" Width="500">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<TextBox Grid.Row="0" IsReadOnly="True" Text="{Binding Exception, Mode=OneTime}"
			ScrollViewer.HorizontalScrollBarVisibility="Auto"
			ScrollViewer.VerticalScrollBarVisibility="Auto"
			ScrollViewer.CanContentScroll="True"/>
		<Button Grid.Row="1" Height="23" Width="120" Margin="0,6,6,6" HorizontalAlignment="Right" IsDefault="True" Click="Button_Click">Beenden</Button>
		<Button Grid.Row="1" Height="23" Width="120" Margin="0,6,132,6" HorizontalAlignment="Right" IsCancel="True">Ignorieren</Button>
	</Grid>
</Window>
