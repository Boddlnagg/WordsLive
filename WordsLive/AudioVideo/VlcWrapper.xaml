<av:BaseMediaControl x:Class="WordsLive.AudioVideo.VlcWrapper"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:av="clr-namespace:WordsLive.AudioVideo"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:vlc="clr-namespace:Vlc.DotNet.Wpf;assembly=Vlc.DotNet.Wpf"
			 mc:Ignorable="d" 
			 d:DesignHeight="300" d:DesignWidth="300"
			 Background="Black">
	<Grid>
		<Grid.Background>
			<VisualBrush Stretch="Uniform">
				<VisualBrush.Visual>
					<Image Source="{Binding ElementName=vlc, Path=VideoSource}" />
				</VisualBrush.Visual>
			</VisualBrush >
		</Grid.Background>
		<vlc:VlcControl x:Name="vlc" />
		<Rectangle x:Name="rect" Fill="Black"/>
	</Grid>
</av:BaseMediaControl>
