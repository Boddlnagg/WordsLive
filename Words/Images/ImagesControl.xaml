<UserControl x:Class="Words.Images.ImagesControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:imageloader="clr-namespace:Words.Utils.ImageLoader"
			 mc:Ignorable="d" 
			 d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		<Grid x:Name="backGrid" Background="Red">
			<Image x:Name="back" imageloader:Loader.DisplayOption="FullResolution" imageloader:Loader.Loaded="back_Loaded"/>
		</Grid>
		<Grid x:Name="frontGrid" Background="Green">
			<Image x:Name="front"/>
		</Grid>
	</Grid>
</UserControl>
